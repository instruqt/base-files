function setWorkdir() {
  sed -i "s%^\(WORKDIR=\).*\$%\1\"$1\"%" ~/.bashrc
  cd $1
}

function failMessage() {
  echo "FAIL: $1" >&2
  exit 1
}

function debugMessage() {
  echo "DEBUG: $1"
}

function hintMessage() {
  echo "HINT: $@"
}

function checkHistory() {
  COMMAND=$(cat /root/.bash_history | grep "^$1$" | wc -l)

  if [ $COMMAND -eq 0 ]; then
    return 1
  fi

  return 0
}

alias set-workdir='setWorkdir'
alias fail-message='failMessage'
alias debug-message='debugMessage'
alias hint-message='hintMessage'
alias check-history='checkHistory'
